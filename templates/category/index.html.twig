{% extends 'base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
    <h1>Category index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Intitulé</th>
                <th>Nombre de module</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>                
                <td>{{ category.nameCategory }}</td>
                <td>{{ category.courses | length }}</td>
                <td>
                    <a class="btn btn-outline-primary" href="{{ path('app_category_show', {'id': category.id}) }}">Détail</a>
                    <a class="btn btn-outline-primary" href="{{ path('app_category_edit', {'id': category.id}) }}">Editer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Pas d'enregistrements</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_category_new') }}">Create new</a>
{% endblock %}
