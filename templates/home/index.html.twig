{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
    <div class="mt-4 p-4 bg-primary text-bg-grey rounded">
        <h1>Site de Formations au Poil</h1>
        {% if app.user %}
            <h2>Bienvenue {{app.user.pseudo}} !! </h2>
        <p>votre mel pour ce compte est  : {{ app.user.email}}</p>
        {% else %}
            <h2>Bienvenue !!</h2>
            <p>En cours de réalisation ...</p>

        {% endif %}
        <div id="accordion">

        <div class="card">
          <div class="card-header">
            <a class="btn" data-bs-toggle="collapse" href="#collapseOne">
              Les sessions passées
            </a>
          </div>
          <div id="collapseOne" class="collapse show" data-bs-parent="#accordion">
            <div class="card-body">
              Contenus des sesions passées
            </div>
          </div>
        </div>
      
        <div class="card">
          <div class="card-header">
            <a class="collapsed btn" data-bs-toggle="collapse" href="#collapseTwo">
              Les sessions en cours
            </a>
          </div>
          <div id="collapseTwo" class="collapse" data-bs-parent="#accordion">
            <div class="card-body">
              Lorem ipsum..
            </div>
          </div>
        </div>
      
        <div class="card">
          <div class="card-header">
            <a class="collapsed btn" data-bs-toggle="collapse" href="#collapseThree">
              Les prochaines sessions
            </a>
          </div>
          <div id="collapseThree" class="collapse" data-bs-parent="#accordion">
            <div class="card-body">
              Contenu des prochaines sessions
            </div>
          </div>
        </div>
      
      </div>         
        
    </div>
{% endblock %}
